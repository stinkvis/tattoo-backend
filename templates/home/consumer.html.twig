{% extends 'base.html.twig' %}

{% block title %}{{ 'meta.title.consumer'|trans }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
{% endblock %}

{% block body %}
    <div class="page">
        <header class="site-header">
            <div class="header-shell">
                <div class="logo">{{ 'brand.name'|trans }}</div>
                <nav class="nav">
                    <a href="#features">{{ 'nav.features'|trans }}</a>
                    <a href="#how-it-works">{{ 'nav.how_it_works'|trans }}</a>
                    <a href="#artists">{{ 'nav.for_you'|trans }}</a>
                </nav>
                <div class="header-actions">
                    <a class="button primary" href="#final-cta">{{ 'buttons.join_waitlist'|trans }}</a>
                    <button class="icon-button" type="button" aria-label="{{ 'nav.open_menu'|trans }}">
                        <svg viewBox="0 0 24 24" aria-hidden="true">
                            <path d="M3 6h18M3 12h18M3 18h18" />
                        </svg>
                    </button>
                </div>
            </div>
        </header>

        <main>
            <section class="final-cta" id="final-cta">
                <div class="cta-glow"></div>
                <div class="cta-content">
                    <h2>{{ 'cta.consumer_title_main'|trans }}<br><span>{{ 'cta.consumer_title_emphasis'|trans }}</span></h2>
                    <p>{{ 'cta.consumer_subtitle'|trans }}</p>
                    <div class="cta-actions">
                        <a class="button primary" href="#">{{ 'buttons.join_waitlist'|trans }}
                            <svg viewBox="0 0 24 24" aria-hidden="true">
                                <path d="M5 12h14" />
                                <path d="M13 6l6 6-6 6" />
                            </svg>
                        </a>
                        <a class="button secondary" href="#">{{ 'buttons.explore_artists'|trans }}</a>
                    </div>
                    <div class="cta-footnote">
                        <span>{{ 'cta.available'|trans }}</span>
                        <span>â€¢</span>
                        <span>{{ 'cta.launching'|trans }}</span>
                    </div>
                </div>
            </section>

            <section class="features" id="features">
                <div class="section-title">
                    <h2>{{ 'consumer.features.title'|trans }}</h2>
                    <p>{{ 'consumer.features.subtitle'|trans }}</p>
                </div>
                <div class="feature-grid">
                    <article class="feature-card">
                        <div class="icon">
                            <svg viewBox="0 0 24 24" aria-hidden="true">
                                <circle cx="11" cy="11" r="7" />
                                <path d="M21 21l-4.3-4.3" />
                            </svg>
                        </div>
                        <h3>{{ 'consumer.features.cards.browse_title'|trans }}</h3>
                        <p>{{ 'consumer.features.cards.browse_body'|trans }}</p>
                    </article>
                    <article class="feature-card">
                        <div class="icon">
                            <svg viewBox="0 0 24 24" aria-hidden="true">
                                <path d="M16 11c1.66 0 3-1.57 3-3.5S17.66 4 16 4s-3 1.57-3 3.5S14.34 11 16 11z" />
                                <path d="M8 11c1.66 0 3-1.57 3-3.5S9.66 4 8 4 5 5.57 5 7.5 6.34 11 8 11z" />
                                <path d="M2 20c0-2.21 3.13-4 7-4" />
                                <path d="M22 20c0-2.21-3.13-4-7-4" />
                            </svg>
                        </div>
                        <h3>{{ 'consumer.features.cards.portfolio_title'|trans }}</h3>
                        <p>{{ 'consumer.features.cards.portfolio_body'|trans }}</p>
                    </article>
                    <article class="feature-card">
                        <div class="icon">
                            <svg viewBox="0 0 24 24" aria-hidden="true">
                                <rect x="3" y="4" width="18" height="18" rx="2" />
                                <path d="M16 2v4M8 2v4M3 10h18" />
                            </svg>
                        </div>
                        <h3>{{ 'consumer.features.cards.request_title'|trans }}</h3>
                        <p>{{ 'consumer.features.cards.request_body'|trans }}</p>
                    </article>
                    <article class="feature-card">
                        <div class="icon">
                            <svg viewBox="0 0 24 24" aria-hidden="true">
                                <path d="M12 2l2.1 4.3L19 7l-3.5 3.4.8 4.9L12 13l-4.3 2.3.8-4.9L5 7l4.9-.7L12 2z" />
                            </svg>
                        </div>
                        <h3>{{ 'consumer.features.cards.save_title'|trans }}</h3>
                        <p>{{ 'consumer.features.cards.save_body'|trans }}</p>
                    </article>
                </div>
            </section>

            <section class="how-it-works" id="how-it-works">
                <div class="section-title">
                    <h2>{{ 'how_it_works.title'|trans }}</h2>
                    <p>{{ 'how_it_works.consumer_subtitle'|trans }}</p>
                </div>
                <div class="steps">
                    <article class="step">
                        <div class="step-number">01</div>
                        <div class="step-content">
                            <h3>{{ 'how_it_works.consumer.steps.discover_title'|trans }}</h3>
                            <p>{{ 'how_it_works.consumer.steps.discover_body'|trans }}</p>
                        </div>
                    </article>
                    <article class="step">
                        <div class="step-number">02</div>
                        <div class="step-content">
                            <h3>{{ 'how_it_works.consumer.steps.pick_title'|trans }}</h3>
                            <p>{{ 'how_it_works.consumer.steps.pick_body'|trans }}</p>
                        </div>
                    </article>
                    <article class="step">
                        <div class="step-number">03</div>
                        <div class="step-content">
                            <h3>{{ 'how_it_works.consumer.steps.reach_title'|trans }}</h3>
                            <p>{{ 'how_it_works.consumer.steps.reach_body'|trans }}</p>
                        </div>
                    </article>
                </div>
            </section>




        </main>

        <footer class="site-footer">
            <div class="footer-shell">
                <div class="logo">{{ 'brand.name'|trans }}</div>
                <div class="footer-links">
                    <a href="#">{{ 'footer.privacy'|trans }}</a>
                    <a href="#">{{ 'footer.terms'|trans }}</a>
                    <a href="#">{{ 'footer.contact'|trans }}</a>
                </div>
                <div class="footer-note">{{ 'footer.copyright'|trans }}</div>
            </div>
        </footer>
    </div>
{% endblock %}
