{% extends 'base.html.twig' %}

{% block title %}ETCHD | Find Your Ink Story{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
{% endblock %}

{% block body %}
    <div class="page">
        <header class="site-header">
            <div class="header-shell">
                <div class="logo">ETCHD</div>
                <nav class="nav">
                    <a href="#features">Features</a>
                    <a href="#how-it-works">How It Works</a>
                    <a href="#artists">For Artists</a>
                </nav>
                <div class="header-actions">
                    <a class="button primary" href="#final-cta">Start Exploring</a>
                    <button class="icon-button" type="button" aria-label="Open menu">
                        <svg viewBox="0 0 24 24" aria-hidden="true">
                            <path d="M3 6h18M3 12h18M3 18h18" />
                        </svg>
                    </button>
                </div>
            </div>
        </header>

        <main>
            <section class="hero" id="top">
                <div class="hero-glow hero-glow-left"></div>
                <div class="hero-glow hero-glow-right"></div>
                <div class="hero-content">
                    <h1>Find Your<br><span>Ink</span> Story</h1>
                    <p>Discover world-class tattoo artists. Explore curated portfolios. Book your next masterpiece with confidence.</p>
                </div>
                <div class="hero-device">
                    <div class="device-glow"></div>
                    <div class="device-frame">
                        <div class="device-screen">
                            <div class="device-header">
                                <span>ETCHD</span>
                                <span class="device-pill"></span>
                            </div>
                            <div class="device-body">
                                <div class="device-card"></div>
                                <div class="device-card"></div>
                                <div class="device-card"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="features" id="features">
                <div class="section-title">
                    <h2>Everything You Need</h2>
                    <p>Designed for artists and collectors alike</p>
                </div>
                <div class="feature-grid">
                    <article class="feature-card">
                        <div class="icon">
                            <svg viewBox="0 0 24 24" aria-hidden="true">
                                <circle cx="11" cy="11" r="7" />
                                <path d="M21 21l-4.3-4.3" />
                            </svg>
                        </div>
                        <h3>Smart Discovery</h3>
                        <p>AI-powered search to match your style with the perfect artist.</p>
                    </article>
                    <article class="feature-card">
                        <div class="icon">
                            <svg viewBox="0 0 24 24" aria-hidden="true">
                                <path d="M16 11c1.66 0 3-1.57 3-3.5S17.66 4 16 4s-3 1.57-3 3.5S14.34 11 16 11z" />
                                <path d="M8 11c1.66 0 3-1.57 3-3.5S9.66 4 8 4 5 5.57 5 7.5 6.34 11 8 11z" />
                                <path d="M2 20c0-2.21 3.13-4 7-4" />
                                <path d="M22 20c0-2.21-3.13-4-7-4" />
                            </svg>
                        </div>
                        <h3>Verified Artists</h3>
                        <p>Curated portfolios from top-rated tattoo professionals worldwide.</p>
                    </article>
                    <article class="feature-card">
                        <div class="icon">
                            <svg viewBox="0 0 24 24" aria-hidden="true">
                                <rect x="3" y="4" width="18" height="18" rx="2" />
                                <path d="M16 2v4M8 2v4M3 10h18" />
                            </svg>
                        </div>
                        <h3>Seamless Booking</h3>
                        <p>Schedule consultations and appointments directly through the app.</p>
                    </article>
                    <article class="feature-card">
                        <div class="icon">
                            <svg viewBox="0 0 24 24" aria-hidden="true">
                                <path d="M12 2l2.1 4.3L19 7l-3.5 3.4.8 4.9L12 13l-4.3 2.3.8-4.9L5 7l4.9-.7L12 2z" />
                            </svg>
                        </div>
                        <h3>Inspiration Gallery</h3>
                        <p>Explore thousands of designs and save your favorites.</p>
                    </article>
                </div>
            </section>

            <section class="how-it-works" id="how-it-works">
                <div class="section-title">
                    <h2>How It Works</h2>
                    <p>Three simple steps to your dream tattoo</p>
                </div>
                <div class="steps">
                    <article class="step">
                        <div class="step-number">01</div>
                        <div class="step-content">
                            <h3>Explore &amp; Discover</h3>
                            <p>Browse curated portfolios and find artists who match your vision and style preferences.</p>
                        </div>
                    </article>
                    <article class="step">
                        <div class="step-number">02</div>
                        <div class="step-content">
                            <h3>Connect &amp; Consult</h3>
                            <p>Message artists directly, share your ideas, and schedule consultations with ease.</p>
                        </div>
                    </article>
                    <article class="step">
                        <div class="step-number">03</div>
                        <div class="step-content">
                            <h3>Book &amp; Create</h3>
                            <p>Secure your appointment, prepare for your session, and bring your tattoo to life.</p>
                        </div>
                    </article>
                </div>
            </section>

            <section class="social-proof" id="artists">
                <div class="section-title">
                    <h2>Trusted by Artists</h2>
                    <p>And the people who wear their work</p>
                </div>
                <div class="testimonial-grid">
                    <article class="testimonial">
                        <div class="quote">“</div>
                        <p>ETCHD changed how I connect with clients. The platform is sleek, professional, and brings serious collectors to my chair.</p>
                        <div class="profile">
                            <img src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=400&h=400&fit=crop" alt="Maria Santos">
                            <div>
                                <span class="name">Maria Santos</span>
                                <span class="role">Fine Line Specialist, Los Angeles</span>
                            </div>
                        </div>
                    </article>
                    <article class="testimonial">
                        <div class="quote">“</div>
                        <p>Finding the right artist used to take weeks. With ETCHD, I discovered someone perfect for my vision in minutes.</p>
                        <div class="profile">
                            <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=400&h=400&fit=crop" alt="James Chen">
                            <div>
                                <span class="name">James Chen</span>
                                <span class="role">Collector, New York</span>
                            </div>
                        </div>
                    </article>
                    <article class="testimonial">
                        <div class="quote">“</div>
                        <p>This is the future of tattoo culture—bridging art and technology beautifully. My bookings doubled in the first month.</p>
                        <div class="profile">
                            <img src="https://images.unsplash.com/photo-1438761681033-6461ffad8d80?w=400&h=400&fit=crop" alt="Alex Rivera">
                            <div>
                                <span class="name">Alex Rivera</span>
                                <span class="role">Traditional Artist, Miami</span>
                            </div>
                        </div>
                    </article>
                </div>
            </section>

            <section class="final-cta" id="final-cta">
                <div class="cta-glow"></div>
                <div class="cta-content">
                    <h2>Your Story<br><span>Starts Here</span></h2>
                    <p>Join thousands of artists and collectors creating meaningful connections through ink.</p>
                    <div class="cta-actions">
                        <a class="button primary" href="#">Download ETCHD
                            <svg viewBox="0 0 24 24" aria-hidden="true">
                                <path d="M5 12h14" />
                                <path d="M13 6l6 6-6 6" />
                            </svg>
                        </a>
                        <a class="button secondary" href="#">Join as Artist</a>
                    </div>
                    <div class="cta-footnote">
                        <span>Available on iOS &amp; Android</span>
                        <span>•</span>
                        <span>Coming Q1 2026</span>
                    </div>
                </div>
            </section>
        </main>

        <footer class="site-footer">
            <div class="footer-shell">
                <div class="logo">ETCHD</div>
                <div class="footer-links">
                    <a href="#">Privacy</a>
                    <a href="#">Terms</a>
                    <a href="#">Contact</a>
                </div>
                <div class="footer-note">© 2026 ETCHD. All rights reserved.</div>
            </div>
        </footer>
    </div>
{% endblock %}
